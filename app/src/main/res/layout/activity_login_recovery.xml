<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_disabled"
    tools:layout_editor_absoluteY="@dimen/_81sdp"
    tools:ignore="RtlHardcoded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        tools:ignore="RtlHardcoded">

    <Button
        android:id="@+id/cancel_recovery_button"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/error"
        android:fontFamily="serif"
        android:gravity="left"
        android:paddingTop="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:textColor="@color/colorPrimary"
        tools:ignore="RtlSymmetry"/>

    <TextView
        android:id="@+id/details_recovery_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Recovery"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:paddingTop="@dimen/_30sdp"
        android:textSize="@dimen/_30sdp"
        tools:ignore="RtlHardcoded"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:ignore="RtlHardcoded">
        <ProgressBar
            android:id="@+id/recovery_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:progressDrawable="@android:color/darker_gray"
            android:foregroundGravity="center"
            android:visibility="invisible"
            tools:ignore="RtlHardcoded"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/send_recovery_button"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignBaseline="@+id/text_email_recovery"
            android:layout_alignParentEnd="true"
            android:background="@drawable/send_it"
            tools:ignore="RtlHardcoded"/>

        <EditText
            android:id="@+id/text_email_recovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCFFFFFF"
            android:paddingTop="@dimen/_8sdp"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_18sdp"
            tools:ignore="RtlSymmetry|RtlHardcoded"/>
    </RelativeLayout>
</RelativeLayout>