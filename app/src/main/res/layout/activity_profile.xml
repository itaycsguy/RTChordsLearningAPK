<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ops_back"
    tools:layout_editor_absoluteY="@dimen/_50sdp"
    tools:ignore="RtlHardcoded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        tools:ignore="RtlHardcoded">

        <android.support.v7.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:minHeight="?android:attr/actionBarSize"
            app:title="My Profile"
            tools:ignore="RtlHardcoded"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:ignore="RtlHardcoded">
        <ProgressBar
            android:id="@+id/profile_progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="@dimen/_116sdp"
            android:layout_height="@dimen/_133sdp"
            android:layout_alignStart="@+id/UploadedView"
            android:layout_alignTop="@+id/UploadedView"
            android:layout_alignEnd="@+id/UploadedView"
            android:layout_alignBottom="@+id/UploadedView"
            android:layout_gravity="center"
            android:progressDrawable="@android:color/darker_gray"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlHardcoded"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:id="@+id/my_profile_photo"
            android:layout_width="@dimen/_205sdp"
            android:layout_height="@dimen/_155sdp"
            android:background="#000000"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="2dp"
            app:srcCompat="@mipmap/facebook_photo_blank"
            tools:ignore="RtlHardcoded"/>
        <TextView
            android:id="@+id/profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="left"
            android:text="Email:"
            android:paddingTop="@dimen/_50sdp"
            android:paddingStart="@dimen/_10sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16sdp"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/profile_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:paddingTop="@dimen/_8sdp"
            android:paddingStart="@dimen/_10sdp"
            android:gravity="left"
            android:text="User Name:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16sdp"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/profile_givenname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:paddingTop="@dimen/_8sdp"
            android:paddingStart="@dimen/_10sdp"
            android:gravity="left"
            android:text="Given Name:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16sdp"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/profile_familyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:paddingTop="@dimen/_8sdp"
            android:paddingStart="@dimen/_10sdp"
            android:gravity="left"
            android:text="Family Name:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16sdp"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/profile_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:paddingTop="@dimen/_8sdp"
            android:paddingStart="@dimen/_10sdp"
            android:gravity="left"
            android:text="Permission:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16sdp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
</RelativeLayout>